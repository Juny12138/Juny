    <script>
        // 微信环境检测
        function isWeChat() {
            return /MicroMessenger/i.test(navigator.userAgent);
        }
        
        // 显示微信分享提示
        document.getElementById('shareBtn').addEventListener('click', function(e) {
            e.preventDefault();
            if(isWeChat()) {
                document.getElementById('wechatTip').style.display = 'flex';
            } else {
                // 非微信环境使用Web Share API
                if(navigator.share) {
                    navigator.share({
                        title: '香橼果读书沙龙书单',
                        text: '第一期：自我疗愈滋养书单',
                        url: window.location.href
                    })
                    .catch(console.error);
                } else {
                    alert('请使用浏览器分享功能分享此页面');
                }
            }
        });
        
        // 关闭提示
        document.getElementById('closeTip').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('wechatTip').style.display = 'none';
        });
        
        // 添加点击反馈效果
        document.querySelectorAll('.book-link').forEach(link => {
            link.addEventListener('click', function(e) {
                // 添加点击动画
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);
            });
        });
        
        // 页面加载动画
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                document.body.style.opacity = 1;
            }, 100);
        });
        
        // 设置body初始状态
        document.body.style.opacity = 0;
        document.body.style.transition = 'opacity 0.5s ease-in';
    </script>
